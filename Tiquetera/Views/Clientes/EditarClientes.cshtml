@model UsuariosViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-info">Editar Cliente</h1>

<div class="row">
    <div class="col-md-8">
        <form method="post" asp-controller="Clientes" asp-action="EditarClientes">
            <input asp-for="@Model.Id" type="hidden" />
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="primerNombre">Primer Nombre</label>
                <input asp-for="primerNombre" class="form-control" required/>
            </div>
            <div class="form-group">
                <label asp-for="segundoNombre">Segundo Nombre</label>
                <input asp-for="segundoNombre" class="form-control" required/>
            </div>
            <div class="form-group">
                <label asp-for="primerApellido">Primer Apellido</label>
                <input asp-for="primerApellido" class="form-control" required/>
            </div>
            <div class="form-group">
                <label asp-for="segundoApellido">Segundo Apellido</label>
                <input asp-for="segundoApellido" class="form-control" required/>
            </div>
            <div class="form-group">
                <label asp-for="numeroDocumento">Numero Documento</label>
                <input asp-for="numeroDocumento" class="form-control" required/>
            </div>
            <div class="form-group">
                <label asp-for="direccion">Direccion</label>
                <input asp-for="direccion" class="form-control" required/>
            </div>
            <div class="form-group">
                <label asp-for="fechaNacimiento">Fecha Nacimiento</label>
                <input asp-for="fechaNacimiento" type="text" class="form-control" id="datepicker" placeholder="Ejemplo: 1990-10-05 " required/>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber">Numero de Telefono</label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">Editar Cliente</button>
                <a asp-action="ListarClientes" class="text-dark" style="width:auto">Volver atrás</a>
            </div>
        </form>
    </div>
</div>
